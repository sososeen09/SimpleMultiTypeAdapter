<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/tv_add_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add header"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/tv_remove_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="remove header"
            android:textAllCaps="false"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/tv_add_footer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add footer"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/tv_remove_footer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="remove footer"
            android:textAllCaps="false"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
